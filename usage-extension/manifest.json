{
  "manifest_version": 3,
  "name": "Rancher - Container Ecosystem- Digital Ocean Usage",
  "description": "Show the Rancher's Container Ecosystem droplet usage per user",
  "version": "0.1",
  "icons": {
    "32": "images/favicon.png",
    "48": "images/favicon.png"
  },
  "background": {
    "service_worker": "background-popup.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "32": "images/favicon.png"
    }
  },
  "content_scripts": [{
    "matches": ["https://cloud.digitalocean.com/*"],
    "run_at": "document_end",
    "js":      ["scripts/droplet-page.js"]
}],
  "permissions": ["activeTab", "scripting", "storage", "downloads"]
}